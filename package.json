{
  "name": "tanam",
  "version": "0.1.0",
  "description": "Pluggable CMS for Firebase",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oddbit/tanam.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/oddbit/tanam/issues"
  },
  "homepage": "https://github.com/oddbit/tanam#readme",
  "keywords": [
    "cms",
    "firebase",
    "angular",
    "angular2",
    "angularfire",
    "angularfire2",
    "serverless",
    "server side rendering",
    "ssr"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build:mod": "npm run build:server && npm run build:functions && cp -r dist/* functions",
    "build:client-and-server-bundles": "ng build --prod && ng run tanam:server:production",
    "build:prerender": "npm run build:client-and-server-bundles && npm run compile:server && npm run generate:prerender",
    "build:ssr": "npm run build:client-and-server-bundles && npm run compile:server",
    "compile:server": "tsc -p tsconfig.ssr.json",
    "generate:prerender": "cd dist && node prerender",
    "serve:prerender": "cd dist/browser && http-server",
    "serve:ssr": "node dist/server"
  },
  "engines": {
    "node": "8"
  },
  "dependencies": {
    "@angular/animations": "~7.2.1",
    "@angular/cdk": "^7.2.1",
    "@angular/common": "~7.2.1",
    "@angular/core": "~7.2.1",
    "@angular/fire": "^5.1.1",
    "@angular/forms": "~7.2.1",
    "@angular/http": "~7.2.1",
    "@angular/material": "~7.2.1",
    "@angular/platform-browser": "~7.2.1",
    "@angular/platform-browser-dynamic": "~7.2.1",
    "@angular/platform-server": "~7.2.1",
    "@angular/router": "~7.2.1",
    "core-js": "^2.5.4",
    "crypto-js": "^3.1.9-1",
    "firebase": "^5.8.0",
    "firebase-admin": "^6.5.0",
    "firebase-functions": "^2.1.0",
    "hammerjs": "^2.0.8",
    "rxjs": "~6.3.3",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.11.0",
    "@angular/cli": "~7.1.4",
    "@angular/compiler": "^7.2.1",
    "@angular/compiler-cli": "^7.2.1",
    "@angular/language-service": "~7.2.0",
    "@nguniversal/express-engine": "^7.0.2",
    "@nguniversal/module-map-ngfactory-loader": "^7.0.2",
    "@types/crypto-js": "^3.1.43",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "bufferutil": "^4.0.1",
    "codelyzer": "~4.5.0",
